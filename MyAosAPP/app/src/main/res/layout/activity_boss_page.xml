<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leo.myaosapp.boss_page"
    android:background="@drawable/boss_background">

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Log Out"
        android:id="@+id/button3"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="false"
        android:enabled="true"
        android:focusable="false"
        android:textColor="#002fff"
        android:background="#ffffff"
        android:clickable="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Boss Mode"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textColor="#624444"
        android:background="#00fe22"
        android:autoText="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_below="@+id/button3"
        android:layout_marginTop="75dp"
        android:layout_alignParentBottom="false"
        android:id="@+id/linearLayout"
        android:layout_alignParentEnd="false">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton"
            android:background="@drawable/user_dashown"
            android:layout_marginLeft="145dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/user_doramon"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton3"
            android:background="@drawable/user_ponhu"
            android:layout_marginLeft="55dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="60dp"
        android:id="@+id/linearLayout3">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton4"
            android:background="@drawable/user_shawfu"
            android:layout_marginLeft="145dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="40dp">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton5"
            android:background="@drawable/user_ginshawn"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BroadCast"
        android:id="@+id/button8"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button3"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="150dp"
        android:background="#01f0fd" />

</RelativeLayout>
